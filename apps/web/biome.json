{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedFunctionParameters": "off"
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noEmptyBlock": "off",
        "noArrayIndexKey": "warn"
      },
      "style": {
        "useImportType": "error",
        "useConsistentArrayType": "error",
        "noNonNullAssertion": "off"
      },
      "complexity": {
        "noForEach": "off",
        "useOptionalChain": "error"
      },
      "a11y": {
        "useButtonType": "warn"
      },
      "performance": {
        "noImgElement": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  }
}
