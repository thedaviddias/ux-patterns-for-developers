{
  "search.exclude": {
    ".git": true,
    "node_modules": true,
    "package.lock": true,
    "pnpm-lock.yaml": true,
    ".next": true,
    "coverage": true,
    "public": true,
    "CHANGELOG": true,
    "CODE_OF_CONDUCT": true,
    "CONTRIBUTING": true,
    "LICENCE": true,
    ".lycheecache": true,
    "lychee-out.md": true
  },
  "javascript.format.enable": true,
  "javascript.validate.enable": false,
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[markdown]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[handlebars]": {
    "editor.defaultFormatter": "eamodio.html-formatter"
  }
}
