{
  "name": "@ux-patterns/registry",
  "version": "0.1.0",
  "description": "UX Patterns component registry system",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./registry.json": "./registry.json"
  },
  "scripts": {
    "registry:generate": "npx tsx scripts/build-registry.ts && shadcn build && rm -f public/r/registry.json",
    "registry:build": "shadcn build"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.0.1"
  },
  "devDependencies": {
    "@thedaviddias/config-typescript": "workspace:*",
    "@types/node": "24.3.0",
    "chokidar": "^4.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rimraf": "^6.0.1",
    "shadcn": "^3.2.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "zod": "^4.1.5"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  }
}
