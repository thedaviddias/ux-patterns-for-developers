{
	"name": "@ux-patterns/registry",
	"version": "0.1.0",
	"description": "UX Patterns component registry system",
	"type": "module",
	"exports": {
		"./.generated": "./.generated/index.tsx",
		"./lib/registry-generator": "./lib/registry-generator.js"
	},
	"scripts": {
		"dev": "nodemon --watch registry/default --ext tsx,ts,jsx,js --ignore 'registry/default/**/*.d.ts' --ignore '.generated/**' --ignore 'public/**' --exec 'npm run registry:generate'",
		"check:type": "tsc --noEmit",
		"registry:generate": "npx tsx scripts/build-registry.ts && shadcn build ../../apps/kit/public/r/registry.json --output ../../apps/kit/public/r",
		"registry:build": "shadcn build",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"@radix-ui/react-slot": "^1.2.3",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.468.0",
		"motion": "^12.23.12",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"tailwind-merge": "^3.0.1"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@thedaviddias/config-typescript": "workspace:*",
		"@types/node": "24.3.0",
		"@types/react": "^19.1.12",
		"@types/react-dom": "^19.1.9",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"chokidar": "^4.0.1",
		"jsdom": "^26.1.0",
		"nodemon": "^3.1.7",
		"rimraf": "^6.0.1",
		"shadcn": "^3.2.1",
		"tsx": "^4.20.3",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4",
		"vitest-axe": "1.0.0-pre.5",
		"zod": "^4.1.5"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
