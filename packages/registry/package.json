{
	"name": "@ux-patterns/registry",
	"version": "0.1.0",
	"description": "UX Patterns component registry system",
	"type": "module",
	"exports": {
		"./.generated": "./.generated/index.tsx",
		"./registry.json": "./registry.json",
		"./lib/registry-generator": "./lib/registry-generator.js"
	},
	"scripts": {
		"dev": "nodemon --watch registry/default --ext tsx,ts,jsx,js --ignore 'registry/default/**/*.d.ts' --ignore '.generated/**' --ignore 'public/**' --exec 'npm run registry:generate'",
		"check:type": "tsc --noEmit",
		"registry:generate": "npx tsx scripts/build-registry.ts && shadcn build && rm -f public/r/registry.json",
		"registry:build": "shadcn build"
	},
	"dependencies": {
		"@radix-ui/react-slot": "^1.2.3",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.468.0",
		"motion": "^12.23.12",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"tailwind-merge": "^3.0.1"
	},
	"devDependencies": {
		"@thedaviddias/config-typescript": "workspace:*",
		"@types/node": "24.3.0",
		"@types/react": "^19.1.12",
		"@types/react-dom": "^19.1.9",
		"chokidar": "^4.0.1",
		"nodemon": "^3.1.7",
		"rimraf": "^6.0.1",
		"shadcn": "^3.2.1",
		"tsx": "^4.20.3",
		"typescript": "^5.9.2",
		"zod": "^4.1.5"
	}
}
