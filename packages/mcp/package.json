{
	"name": "@ux-patterns/mcp",
	"version": "1.0.0",
	"description": "MCP server for UX Patterns - exposes patterns, glossary, and decision guides to AI agents",
	"private": true,
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"bin": {
		"ux-patterns-mcp": "dist/cli.js"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./cli": {
			"types": "./dist/cli.d.ts",
			"import": "./dist/cli.js"
		},
		"./tools": {
			"types": "./dist/tools/index.d.ts",
			"import": "./dist/tools/index.js"
		},
		"./utils": {
			"types": "./dist/utils/index.d.ts",
			"import": "./dist/utils/index.js"
		},
		"./data": {
			"types": "./dist/data/index.d.ts",
			"import": "./dist/data/index.js"
		}
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"lint": "biome check .",
		"test": "NODE_OPTIONS='--experimental-vm-modules' pnpm exec jest",
		"test:watch": "NODE_OPTIONS='--experimental-vm-modules' pnpm exec jest --watch",
		"test:coverage": "NODE_OPTIONS='--experimental-vm-modules' pnpm exec jest --coverage",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.25.2"
	},
	"devDependencies": {
		"@thedaviddias/config-typescript": "workspace:*",
		"@types/jest": "^29.5.14",
		"@types/node": "25.0.5",
		"jest": "^29.7.0",
		"ts-jest": "^29.2.5",
		"tsup": "^8.4.0",
		"typescript": "^5.9.3"
	},
	"engines": {
		"node": ">=20"
	}
}
