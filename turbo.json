{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"remoteCache": {
		"signature": true
	},
	"tasks": {
		"build": {
			"dependsOn": ["^build", "registry:generate"],
			"outputs": [
				".next/**",
				"!.next/cache/**",
				"out/**",
				"registry.json",
				"public/r/**"
			],
			"env": [
				"NODE_ENV",
				"NEXT_PUBLIC_*",
				"SENTRY_*",
				"VERCEL_*",
				"MDX_API_KEY",
				"MAILERLITE_API_KEY",
				"MAILERLITE_GROUP_IDS",
				"PLAUSIBLE_API_KEY",
				"TURBO_REMOTE_CACHE_SIGNATURE_KEY"
			]
		},
		"registry:generate": {
			"outputs": ["registry.json", "public/r/**"],
			"env": [
				"NODE_ENV",
				"SENTRY_*",
				"MDX_API_KEY",
				"MAILERLITE_API_KEY",
				"MAILERLITE_GROUP_IDS",
				"PLAUSIBLE_API_KEY",
				"TURBO_REMOTE_CACHE_SIGNATURE_KEY"
			]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"registry:watch": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"outputs": []
		},
		"check": {
			"outputs": []
		},
		"format": {
			"outputs": []
		},
		"test": {
			"outputs": [],
			"dependsOn": []
		}
	}
}
