{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "out/**"],
      "env": ["NODE_ENV", "NEXT_PUBLIC_*", "SENTRY_*", "VERCEL_*", "MDX_API_KEY", "MAILERLITE_API_KEY", "MAILERLITE_GROUP_IDS", "PLAUSIBLE_API_KEY"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "check": {
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "test": {
      "outputs": [],
      "dependsOn": []
    }
  }
}
